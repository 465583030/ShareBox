<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="video_media_controller_time_text_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:text">00:00</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="video_media_controller_seekbar_style" parent="android:Widget.SeekBar">
        <item name="android:progressDrawable">@drawable/video_progressbar</item>
        <item name="android:minHeight">5dp</item>
        <item name="android:maxHeight">5dp</item>
        <item name="android:thumb">@mipmap/btn_video_progress_thumb</item>
        <item name="android:thumbOffset">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:focusable">true</item>
        <item name="android:max">1000</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:colorControlNormal">#1296db</item>
        <item name="android:colorControlHighlight">#1296db</item>
    </style>


</resources>
